<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <_XbdUrl_animatedvectordrawable>https://dl-ssl.google.com/android/repository/android_m2repository_r40.zip</_XbdUrl_animatedvectordrawable>
        <_XbdSha1_animatedvectordrawable>782e7233f18c890463e8602571d304e680ce354c</_XbdSha1_animatedvectordrawable>

        <!-- Unique key for cached download -->
        <_XbdKey_animatedvectordrawable>androidsupport-25.0.1</_XbdKey_animatedvectordrawable>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_animatedvectordrawable>m2repository\com\android\support\animated-vector-drawable\25.0.1\animated-vector-drawable-25.0.1.aar</_XbdAarFile_animatedvectordrawable>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_animatedvectordrawable>$(XamarinBuildDownloadDir)$(_XbdKey_animatedvectordrawable)\$(_XbdAarFile_animatedvectordrawable)</_XbdAarFileFullPath_animatedvectordrawable>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_animatedvectordrawable>Xamarin.Android.Support.Animated.Vector.Drawable</_XbdAssemblyName_animatedvectordrawable>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_animatedvectordrawable"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_animatedvectordrawable">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\android\$(_XbdAarFile_animatedvectordrawable)" Condition="Exists('$(AndroidSdkDirectory)\extras\android\$(_XbdAarFile_animatedvectordrawable)')">
            <Output PropertyName="_XbdAarFileFullPath_animatedvectordrawable" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_animatedvectordrawable)" Condition="!Exists('$(AndroidSdkDirectory)\extras\android\$(_XbdAarFile_animatedvectordrawable)')">
                <Url>$(_XbdUrl_animatedvectordrawable)</Url>
                <Kind>Zip</Kind>
                <Sha1>$(_XbdSha1_animatedvectordrawable)</Sha1>
                <CustomErrorCode>XBD0100</CustomErrorCode>
                <CustomErrorMessage>Please make sure 'Android Support Repository' is installed and updated to the latest version in the Android SDK Manager.  You can find it in the 'Extras' section of the Android SDK Manager.</CustomErrorMessage>
                <ExclusiveLockTimeout>3600</ExclusiveLockTimeout>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_animatedvectordrawable)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_animatedvectordrawable)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>